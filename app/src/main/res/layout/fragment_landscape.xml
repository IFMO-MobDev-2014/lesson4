<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ifmo.md.lesson4.LandscapeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">


        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="2"
            android:layout_gravity="center">

            <TableRow>
                <Button android:layout_weight="1" android:id="@id/button_sin" android:text="@string/button_sin"/>
                <Button android:layout_weight="1" android:id="@id/button_ln" android:text="@string/button_ln"/>
            </TableRow>

            <TableRow>
                <Button android:layout_weight="1" android:id="@id/button_cos" android:text="@string/button_cos"/>
                <Button android:layout_weight="1" android:id="@id/button_log" android:text="@string/button_log"/>
            </TableRow>

            <TableRow>
                <Button android:layout_weight="1" android:id="@id/button_tan" android:text="@string/button_tan"/>
                <Button android:layout_weight="1" android:id="@id/button_exp" android:text="@string/button_exp"/>
            </TableRow>

            <TableRow>
                <Button android:layout_weight="1" android:id="@id/button_pi" android:text="@string/button_pi"/>
                <Button android:layout_weight="1" android:id="@id/button_power" android:text="@string/button_power"/>
            </TableRow>

            <TableRow>
                <Button android:layout_weight="1" android:id="@id/button_fact" android:text="@string/button_fact"/>
                <Button android:layout_weight="1" android:id="@id/button_sqrt" android:text="@string/button_sqrt"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_gravity="center">

            <TableRow android:weightSum="3" android:layout_weight="1">
                <Button android:layout_weight="1" android:id="@id/button_7" android:text="@string/button_7"/>
                <Button android:layout_weight="1" android:id="@id/button_8" android:text="@string/button_8"/>
                <Button android:layout_weight="1" android:id="@id/button_9" android:text="@string/button_9"/>
            </TableRow>

            <TableRow android:weightSum="3" android:layout_weight="1">
                <Button android:layout_weight="1" android:id="@id/button_4" android:text="@string/button_4"/>
                <Button android:layout_weight="1" android:id="@id/button_5" android:text="@string/button_5"/>
                <Button android:layout_weight="1" android:id="@id/button_6" android:text="@string/button_6"/>
            </TableRow>

            <TableRow android:weightSum="3" android:layout_weight="1">
                <Button android:layout_weight="1" android:id="@id/button_1" android:text="@string/button_1"/>
                <Button android:layout_weight="1" android:id="@id/button_2" android:text="@string/button_2"/>
                <Button android:layout_weight="1" android:id="@id/button_3" android:text="@string/button_3"/>
            </TableRow>

            <TableRow android:weightSum="3" android:layout_weight="1">
                <Button android:layout_weight="2" android:id="@id/button_0" android:text="@string/button_0"/>
                <Button android:layout_weight="1" android:id="@id/button_point" android:text="@string/button_point"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</FrameLayout>
