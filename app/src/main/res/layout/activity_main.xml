<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_weight="1.97">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputExpr"
            android:layout_weight="1.19"
            android:inputType=""
            android:longClickable="false"
            android:background="#368771ba"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:textSize="@dimen/size_of_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_of_result_field"
            android:id="@+id/result"
            android:layout_margin="@dimen/activity_margin"
            android:background="#368771ba"
            android:textSize="@dimen/size_of_text"
            android:editable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C"
            android:id="@+id/C"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:id="@+id/nought"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="â†"
            android:id="@+id/delete"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/plus"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/one"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/two"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/three"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/minus"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/four"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/five"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/six"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:id="@+id/div"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/seven"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/eight"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/nine"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:id="@+id/mul"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="("
            android:id="@+id/open"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />

        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/zero"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />

        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=")"
            android:id="@+id/close"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />

        <Button android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/equal"
            android:onClick="onButtonClick"
            android:textSize="@dimen/size_of_digits" />
    </LinearLayout>
</LinearLayout>