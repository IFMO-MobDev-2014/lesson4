<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/text"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textIsSelectable="false" />

    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/main_table">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/one"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/two"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/three"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/plus"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/minus"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/four"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/five"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/six"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/mul"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/div"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/seven"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/eight"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/nine"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="("
                android:id="@+id/open_bracket"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=")"
                android:id="@+id/close_bracket"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/tableRow">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/point"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/zero"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/clear"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="←"
                android:id="@+id/delete"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="30dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/equal"
                android:layout_weight="1"
                android:textColor="#ff0000ff"
                android:textSize="30dp"
                android:textStyle="bold" />

        </TableRow>


    </TableLayout>

</LinearLayout>