<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    style="@android:style/Theme.Holo.Light">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Expression"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="("
            android:id="@+id/buttonopn"
            android:layout_weight="0.2"
            android:onClick="onClickOpenBracket"
            style="@android:style/ButtonBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=")"
            android:id="@+id/buttoncls"
            android:layout_weight="0.2"
            android:onClick="onClickCloseBracket"
            style="@android:style/ButtonBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C"
            android:id="@+id/buttonC"
            android:layout_weight="0.2"
            android:onClick="onClickC"
            style="@android:style/ButtonBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="del"
            android:id="@+id/buttondel"
            android:layout_weight="0.2"
            android:onClick="onClickDelete"
            style="@android:style/ButtonBar" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/button1"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/button2"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/button3"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/buttonsum"
            android:layout_weight="0.2"
            android:onClick="onClickOperations"
            style="@android:style/ButtonBar" />


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/button4"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/button5"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/button6"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/buttonsub"
            android:layout_weight="0.2"
            android:onClick="onClickOperations"
            style="@android:style/ButtonBar" />


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/button7"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/button8"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/button9"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:id="@+id/buttonmul"
            android:layout_weight="0.2"
            android:onClick="onClickOperations"
            style="@android:style/ButtonBar" />


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:id="@+id/buttonpnt"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/ButtonBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/button0"
            android:layout_weight="0.2"
            android:onClick="onClickDigit"
            style="@android:style/DeviceDefault.ButtonBar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/buttoneq"
            android:layout_weight="0.2"
            android:onClick="onClickEquals"
            style="@android:style/ButtonBar" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:id="@+id/buttondiv"
            android:layout_weight="0.2"
            android:onClick="onClickOperations"
            style="@android:style/ButtonBar" />
        </LinearLayout>
</LinearLayout>