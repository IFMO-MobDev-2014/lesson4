<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:textSize="32sp"
        android:ellipsize="none"
        android:singleLine="true"
        android:layout_gravity="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="32sp"
        android:singleLine="true"
        android:id="@+id/result"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="resultClick" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/b7"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/b8"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/b9"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/plus"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/minus"
            android:onClick="buttonClick"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/b4"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/b5"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/b6"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:id="@+id/times"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:id="@+id/divide"
            android:onClick="buttonClick"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/b1"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/b2"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/b3"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="â†"
            android:id="@+id/delete"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1
"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="C"
            android:id="@+id/clear"
            android:onClick="buttonClick"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/zero"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:id="@+id/point"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="("
            android:id="@+id/lparent"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=")"
            android:id="@+id/rparent"
            android:onClick="buttonClick"
            android:textSize="32sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/equals"
            android:onClick="buttonClick"
            android:layout_weight="1"
            android:textSize="32sp" />
    </LinearLayout>
</LinearLayout>