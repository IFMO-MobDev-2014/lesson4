<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    style="?android:buttonBarStyle"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/resView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.86"
        android:singleLine="false"
        android:textIsSelectable="true"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.14"
        android:weightSum="10"
        style="?android:buttonBarStyle"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:weightSum="100"
            style="?android:buttonBarStyle"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="25"
                android:weightSum="3"
                style="?android:buttonBarStyle"
                >

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/num1"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/num2"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:id="@+id/num3"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="25"
                android:weightSum="3"
                style="?android:buttonBarStyle"
                >

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:id="@+id/num4"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/num5"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:id="@+id/num6"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />

                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="25"
                android:weightSum="3"
                style="?android:buttonBarStyle"
                >

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/num7"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/num8"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />

                <Button android:onClick="myFancyListener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/num9"
                    android:layout_weight="1"
                    style="?android:buttonBarStyle"
                    />

                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="25"
                android:weightSum="100"
                style="?android:buttonBarStyle"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/num0"
                    android:layout_weight="40"
                    android:onClick="myFancyListener"
                    style="?android:buttonBarStyle"
                    />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="."
                    android:id="@+id/numDot"
                    android:layout_weight="40"
                    android:onClick="myFancyListener"
                    style="?android:buttonBarStyle"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:id="@+id/numExpr"
                    android:layout_weight="20"
                    android:onClick="myFancyListener"
                    style="?android:buttonBarStyle"
                    />
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="8"
            android:weightSum="140"
            style="?android:buttonBarStyle"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="del"
                android:id="@+id/numBackspace"
                android:layout_weight="20"
                android:onClick="myFancyListener"
                style="?android:buttonBarStyle"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/numPlus"
                android:layout_weight="20"
                android:onClick="myFancyListener"
                style="?android:buttonBarStyle"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/numMinus"
                android:layout_weight="20"
                android:onClick="myFancyListener"
                style="?android:buttonBarStyle"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/numDivide"
                android:layout_weight="20"
                android:onClick="myFancyListener"
                style="?android:buttonBarStyle"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/numMul"
                android:layout_weight="20"
                android:onClick="myFancyListener"
                style="?android:buttonBarStyle"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="( )"
                android:id="@+id/numParentheses"
                android:layout_weight="20"
                android:onClick="myFancyListener"
                style="?android:buttonBarStyle"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/numClear"
                android:layout_weight="20"
                android:onClick="myFancyListener"
                style="?android:buttonBarStyle"
                />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>