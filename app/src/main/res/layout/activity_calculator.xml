<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.ifmo.md.lesson4.CalculatorActivity">

    <EditText
        android:id="@+id/expr_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>
    <GridLayout
        android:id="@+id/keyboard"
        android:layout_below="@id/expr_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">
        <Button
            android:text="("
            android:layout_column="0"
            android:onClick="insertChar"/>
        <Button
            android:text=")"
            android:layout_column="1"
            android:onClick="insertChar"/>
        <Button
            android:text="DEL"
            android:layout_column="2"
            android:onClick="deleteChar"/>
        <Button
            android:text="AC"
            android:layout_column="3"
            android:onClick="resetField"/>
        <Button
            android:text="7"
            android:layout_column="0"
            android:onClick="insertChar"/>
        <Button
            android:text="8"
            android:layout_column="1"
            android:onClick="insertChar"/>
        <Button
            android:text="9"
            android:layout_column="2"
            android:onClick="insertChar"/>
        <Button
            android:text="/"
            android:layout_column="3"
            android:onClick="insertChar"/>
        <Button
            android:text="4"
            android:layout_column="0"
            android:onClick="insertChar"/>
        <Button
            android:text="5"
            android:layout_column="1"
            android:onClick="insertChar"/>
        <Button
            android:text="6"
            android:layout_column="2"
            android:onClick="insertChar"/>
        <Button
            android:text="*"
            android:layout_column="3"
            android:onClick="insertChar"/>
        <Button
            android:text="1"
            android:layout_column="0"
            android:onClick="insertChar"/>
        <Button
            android:text="2"
            android:layout_column="1"
            android:onClick="insertChar"/>
        <Button
            android:text="3"
            android:layout_column="2"
            android:onClick="insertChar"/>
        <Button
            android:text="-"
            android:layout_column="3"
            android:onClick="insertChar"/>
        <Button
            android:text="0"
            android:layout_column="0"
            android:onClick="insertChar"/>
        <Button
            android:text="."
            android:layout_column="1"
            android:onClick="insertChar"/>
        <Button
            android:text="="
            android:layout_column="2"
            android:onClick="makeCalculations"/>
        <Button
            android:text="+"
            android:layout_column="3"
            android:onClick="insertChar"/>
    </GridLayout>

</RelativeLayout>
